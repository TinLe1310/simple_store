<article class="message is-dark">
  <div class="message-header">
    <p>Food Ingredients</p>
    <button class="delete" aria-label="delete"></button>
  </div>
  <div class="message-body">
    <ul>
      <% @products.each do |p|%>
          <li>
            <%= link_to p.title, p %>
            <em>(<%= p.category.name %>)</em>
          </li>
      <% end %>
    </ul>
  </div>
</article>
